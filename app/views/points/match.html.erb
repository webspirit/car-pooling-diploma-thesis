<h1>Matched Routes</h1>

<%= hidden_field_tag "user_point", @current_point.id %>

<table>
  <tr>
    <th>Departure address</th>
    <th>Arrival address</th>
    <th>Distance departure range</th>
    <th>Distance arrival range</th>
    <th>Start time</th>
    <th>Time range from</th>
    <th>Time range to</th>
    <th>User</th>
    <th>Claim Route</th>
  </tr>

<% @points.each do |point| %>
  <tr>
    <td><%= point.departure_address %></td>
    <td><%= point.arrival_address %></td>
    <td><%= point.distance_departure_range %></td>
    <td><%= point.distance_arrival_range %></td>
    <td><%= point.start_time %></td>
    <td><%= point.time_range_from %></td>
    <td><%= point.time_range_to %></td>
    <td><%= point.user_id %></td>
    <td><%= link_to 'Claim', claim_route_path(id: @current_point.id, fellow: point) %></td>
  </tr>
<% end %>
</table>

<br />